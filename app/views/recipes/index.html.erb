<div class="container">
	<div class="row row-content">
		<div class="col-xs-12 col-sm-9 col-sm-offset-3">
			<%= form_tag(recipes_index_path, method: "get") do %>
				<%= text_field_tag(:search, "#{@search}", placeholder: "recipe name", class: "inputbox", autofocus: true) %>
				<%= button_tag(type: "submit", class: "btn btn-primary btn-sm") do %>
					<span class="glyphicon glyphicon-search"></span>
				<% end %>
			<% end %>
		</div>
	</div>

	<% if @recipes.present? %>
		<div class="row row-content">
			<div class="col-xs-12">
				<h2>Searching for - <%= @search %></h2>
			</div>
		</div>

		<div class="row row-content">
			<div class="col-xs-12 col-sm-8 col-sm-offset-4">
				<div class="digg_pagination">
					<%= will_paginate @recipes %>
				</div>
			</div>
		</div>

		<div class="list-group">
			<% @recipes.each do |recipe| %>
				<a href="<%= recipe["source_url"] %>" class="list-group-item list-group-item-action">
					<p class="list-group-item-heading"><%= image_tag(recipe["image_url"], width: "100", height: "100") %></p>
					<p class="list-group-item-text"><%= recipe["title"] %></p>
				</a>
			<% end %>
		</div>

		<div class="row row-content">
			<div class="col-xs-12 col-sm-8 col-sm-offset-4">
				<div class="digg_pagination">
					<%= will_paginate @recipes %>
				</div>
			</div>
		</div>

	<% else %>
		<div class="row row-content">
			<div class="col-xs-12">
				<h2>Could not load recipes for <%= @search %></h2>
			</div>
		</div>

	<% end %>

</div>
