<div class="container">
	<div class="row row-content">
		<div class="col-xs-12 col-sm-9 col-sm-offset-3">
			<%= form_tag(recipes_index_path, method: "get") do %>
				<%= text_field_tag(:search, "#{@search}", placeholder: "recipe name", class: "inputbox", autofocus: true) %>
				<%= button_tag(type: "submit", class: "btn btn-primary btn-sm") do %>
					<span class="glyphicon glyphicon-search"></span>
				<% end %>
			<% end %>
		</div>
	</div>

	<% if @recipes.present? %>
		<div class="row row-content">
			<div class="col-xs-12">
				<h2>Searching for - <%= @search %></h2>
			</div>
		</div>

		<div class="row row-content">
			<div class="col-xs-12 col-sm-8 col-sm-offset-4">
				<div class="digg_pagination">
					<%= will_paginate @recipes %>
				</div>
			</div>
		</div>

		<table class="table table-hover table-condensed">
			<thead>
				<tr>
					<th>Image</th>
					<th>Title</th>
					<!-- <th>Social Rank</th> -->
				</tr>
			</thead>
			<tbody>
			<% @recipes.each do |recipe| %>
				<tr>
					<td><%= link_to image_tag(recipe["image_url"], width: "100", height: "100"), recipe["source_url"] %></td>
					<td><%= link_to sanitize(recipe["title"]), recipe["source_url"] %></td>
					<!-- <td><%= recipe["social_rank"] %></td> -->
				</tr>
			<% end %>
			</tbody>
		</table>

		<div class="row row-content">
			<div class="col-xs-12 col-sm-8 col-sm-offset-4">
				<div class="digg_pagination">
					<%= will_paginate @recipes %>
				</div>
			</div>
		</div>

	<% else %>
		<div class="row row-content">
			<div class="col-xs-12">
				<h2>Could not load recipes for <%= @search %></h2>
			</div>
		</div>

	<% end %>

</div>
